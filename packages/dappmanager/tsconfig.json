{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    // TODO: Fix in a latter PR, too many changes for now
    "useUnknownInCatchVariables": false,
    "types": ["mocha", "node"],
    "outDir": "dist",
    "sourceMap": true
  },
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
